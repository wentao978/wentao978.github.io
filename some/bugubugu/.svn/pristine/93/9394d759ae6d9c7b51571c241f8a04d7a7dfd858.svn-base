<ion-view view-title="求好书" hide-tabs>
  <ion-content class="padding" has-bouncing="true">
  	<div ng-repeat="y in qiuHaobooks">
  		<div class="zx-tushu-nav zx-addbook-nav">
			<span>选择一级类别</span>
			<ul>
				<li ng-repeat="restaurant in directory" ng-click="selectRestaurant($index)" ng-class="{selected: $index==selectedRow}">{{restaurant.name}}</li>
			</ul>
			<div>选择二级类别</div>
			<ul>
				<li ng-repeat="x in directory2" ng-click="selectRestaurant2($index)" ng-class="{selected: $index==selectedRow2}">{{x.name}}</li>
			</ul>
		</div>
		<div class="zx-addbook-line"></div>
		<div class="zx-addbook-describe">
			<span>需求描述</span>
			<textarea ng-model="y.content" placeholder="添加项目描述"></textarea>
			<div class="zx-tushu-bookfooter zx-addbook-bookfooter">
				<span class="zx-qiushu-label">标签:</span>
				<ul>
					<li class="{{color|randomColor}}">日本</li>
		            <li class="{{color|randomColor}}">文学</li>
		            <li class="{{color|randomColor}}">经典</li>
					<li class="{{color|randomColor}}">日本</li>
		            <li class="{{color|randomColor}}">文学</li>
		            <li class="{{color|randomColor}}">经典</li>
		            <li class="{{color|randomColor}}">日本</li>
		            <li ui-sref="tab.tuijian.addbiaoqian" class="{{color|randomColor}}">添加+</li>
				</ul>
			</div>
		</div>
		<div class="zx-addbook-commit">
		      <button class="zx-signin-commit" ng-click="addBook()">
		      提交
		      </button>
		</div>
  	</div>
    
  </ion-content>
</ion-view>