    <ion-view id="tushu" style="display: block">
      <ion-content class="padding" has-bouncing="true">
      <ion-refresher pulling-text="松开刷新" on-refresh="doRefresh()"></ion-refresher>
        <div class="zx-tushu-main">
          <div class="zx-tushu-search">
            <input type="text" ng-model="bookname" placeholder="搜索" ng-change="searchBook(bookname)" >
          </div>
          <div class="zx-tushu-line"></div>
          <div class="zx-tushu-nav">
            <span>一级分类</span>
            <ul >
              <li ng-repeat="restaurant in directory" ng-click="selectRestaurant($index)" ng-class="{selected: $index==selectedRow}">{{restaurant.name}}</li>
            </ul>
            <div>二级分类</div>
            <ul>
              <li ng-repeat="x in directory2" ng-click="selectRestaurant2($index)" ng-class="{selected: $index==selectedRow2}">{{x.name}}</li>
            </ul>
          </div>
          <div class="zx-tushu-line zx-tushu-line2"></div>
          <div ng-repeat="x in data.rows" class="zx-tushu-book" ui-sref="tab.piao.detail({id:x.bookid})">
          <!-- <div ng-repeat="x in data.rows" class="zx-tushu-book" ui-sref="tab.piao.detail({isbn:x.qrid,userbookid:x.bookid})"> -->
          
            <div class="zx-tushu-content">
              <div class="zx-tushu-bookpic">
                <img src="{{x.picture||'img/driftagepic/Group3.png'}}" alt="">
              </div>
              <div class="zx-tushu-abstract">
                <div class="zx-tushu-bookname">
                  <span class="zx-book-name">{{x.bookname}}</span>
                  <p>&nbsp&nbsp|&nbsp&nbsp</p>
                  <span class="zx-book-fen">7.6</span>
                </div>
                <div>作者:{{x.writer||"未知"}}</div>
                <div>出版社:{{x.publish||"未知"}}</div>
                <div>ISBN：{{x.isbn||"未知"}}</div>
              </div>
              <div class="zx-tushu-state">
                <div>1000本</div>
                <!-- <div>漂流中</div> -->
                <div  ng-click="gotoOrder($event)" class="zx-tushu-bespoke">预约</div>
              </div>
            </div>
            <div class="zx-tushu-bookfooter">
              <span class="zx-qiushu-label">标签:</span>
              <ul>
                <li class="{{color|randomColor}}">日本</li>
                <li class="{{color|randomColor}}">文学</li>
                <li class="{{color|randomColor}}">经典</li>
              </ul>
              <div class="zx-tushu-position">
                <img src="img/driftagepic/CombinedShapeCopy.png" alt="">
                <span>26km</span>
              </div>
            </div>
          </div>
        </div>
        <ion-infinite-scroll ng-if="load" on-infinite="loadMore()" distance="1%" ></ion-infinite-scroll>
      </ion-content>
    </ion-view>
    <ion-view id="zhandian"  has-bouncing="false" style="display: none">
      <ion-content class="padding"  overflow-scroll="true" style="overflow: hidden">
        <div id="allmap"></div>
        <div id="map_location" class="map_location map" ng-click="map_location($event)"></div>
        <div id="map_search" class="map_search map" ng-click="map_search()"></div>
        <div id="map_chat" class="map_chat map" ng-click="map_chat()"></div>
        <div ui-sref="tab.liebiao" id="map_list" class="map_list map" ng-click="map_list()"></div>
      </ion-content>
    </ion-view>
</ion-view>
