<ion-view hide-nav-bar="true" class="zx-header-title" view-title="{{title}}">
  <ion-header-bar class="zx-piaoliu-header">
      <div  ng-click="gotoToupiao()" ng-show="flag" class="zx-addbook-button">
          <img src="img/driftagepic/icon.png" alt="">
      </div>
      <div ng-click="gotoZhandian()" ng-hide="isflag" class="zx-addbook-button">
          <img src="img/driftagepic/zhandianicon.png" alt="">
      </div>
      <div class="zx-piaoliu-title">
        <div ng-click="gotoPage1()" ng-class="{error:isError}" class="zx-piaoliu-btn zx-bookbtn">图书</div>
        <div ng-click="gotoPage2()" ng-class="{warning:isWarning}" class="zx-piaoliu-btn">站点</div>
      </div>
      <div class="zx-piaoliu-scan">
        <img ng-click="scan()" src="img/driftagepic/Group2.png" alt="">
      </div>
  </ion-header-bar>



  
