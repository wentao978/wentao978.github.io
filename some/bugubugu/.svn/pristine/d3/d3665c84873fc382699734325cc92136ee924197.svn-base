<ion-view  view-title="扫描图书" hide-tabs> 
  <ion-content class="padding" has-bouncing="true">
	    <div class="zx-tushu-book">
            <div class="zx-tushu-content">
              <div ui-sref="tab.piao.detail" class="zx-tushu-bookpic">
                <img src="{{x.picture}}" alt="">
              </div>
              <div class="zx-tushu-abstract">
                <div class="zx-tushu-bookname"><span class="zx-book-name">{{x.bookname}}</span>&nbsp&nbsp|&nbsp&nbsp<span>7.6</span></div>
                <div>作者:{{x.writer}}</div>
                <div>出版社:{{x.publish}}</div>
                <div>ISBN：{{x.qrid}}</div>
              </div>
              <div class="zx-tushu-state">
                <div>1000本</div>
                <div>漂流中</div>
                <div ui-sref="tab.order" class="zx-tushu-bespoke">预约</div>
              </div>
            </div>
            <div class="zx-tushu-bookfooter">
              <span class="zx-qiushu-label">标签:</span>
              <ul>
                <li>日本</li>
                <li>文学</li>
                <li>经典</li>
              </ul>
              <div class="zx-tushu-position">
                <span ng-click="jieBook()">借这本书</span>
              </div>
            </div>
        </div>
        <div ng-show="flag" class="zx-saomiao-tishi">
        	<span>借书请求发出</span></br>
        	<span>等待确认中...</span>
        </div>  
  </ion-content>
</ion-view>