<ion-view view-title="借书" hide-tabs>
  <ion-nav-buttons side="right">
    <button class="button button-clear button-outline" >
    	说明
     </button>
  </ion-nav-buttons>
  <ion-content class="padding">
  	<div class="zx-tushu-content" ng-repeat="x in jieShuBooks.rows" has-bouncing="true">
      <div ui-sref="tab.piao.detail" class="zx-tushu-bookpic">
        <img src="{{x.picture||'img/driftagepic/Group3.png'}}" alt="">
      </div>
      <div class="zx-tushu-abstract">
        <div class="zx-tushu-bookname">
          <span class="zx-book-name">{{x.name}}</span>
          <p>&nbsp&nbsp|&nbsp&nbsp</p>
          <span class="zx-book-fen">7.6</span>
        </div>
        <div>作者:{{x.writer}}</div>
        <div>出版社:{{x.publish}}</div>
        <div>ISBN：{{x.isbn}}</div>
      </div>
    </div>
    <div class="zx-jieshu-footer">
    	<span>需要积分</span>
    	<div>3点</div>
    </div>
    <div class="zx-addbook-commit zx-jieshu-button">
	  <p class="zx-detail-shuping">目前0点积分,请先充值</p>
      <button ui-sref="tab.chongzhi" class="zx-signin-commit">
      去充值
      </button>
      </br><p>点击右上角获取更多信息</p>
	</div>
  </ion-content>
</ion-view>